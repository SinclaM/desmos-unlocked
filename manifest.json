{
   "background": {
      "persistent": true,
      "scripts": [ "browser-polyfill.js ,background.js" ]
   },
   "content_scripts": [ {
      "js": [ "browser-polyfill.js, contentscript.js" ],
      "matches": [ "https://www.desmos.com/calculator*" ],
      "run_at": "document_idle"
   } ],
   "manifest_version": 2,
   "name": "Desmos Unlocked",
   "browser_action": {
      "default_icon": {
         "128": "images/desmos-unlocked-128.png",
         "16" : "images/desmos-unlocked-16.16png",
         "32" : "images/desmos-unlocked-32.png",
         "48" : "images/desmos-unlocked-42.png"
      },
      "default_popup": "popup.html"
   },
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@lsadf.com"
    }
  },
   "permissions": [ "activeTab", "storage" ],
   "version": "1.0"
}

